<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:color="@color/rounded_favorite_button" android:width="2dp" />
            <gradient android:startColor="#FFFFFF" android:endColor="#FFFFFF" android:angle="90"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:color="@color/orange_dark" android:width="1dp" />
            <gradient android:startColor="@color/orange_light" android:endColor="@color/orange_primary" android:angle="90"/>
        </shape>
    </item>
</selector>