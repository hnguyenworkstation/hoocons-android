<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stats_card"
            app:cardCornerRadius="@dimen/margin_4"
            app:cardElevation="2dp"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:id="@+id/user_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1167"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="posts"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="396"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="followers"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="485"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="loves"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stats_card"
            app:cardCornerRadius="@dimen/margin_4"
            app:cardElevation="2dp"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/location_detail"
                    android:layout_alignParentStart="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/location">

                        <ImageView
                            android:layout_width="@dimen/cardview_smallicon_size"
                            android:layout_height="@dimen/cardview_smallicon_size"
                            android:id="@+id/loc_ic"
                            android:layout_centerVertical="true"
                            android:src="@drawable/detail_location_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/option_text_size"
                            android:layout_toEndOf="@+id/loc_ic"
                            android:layout_marginStart="@dimen/margin_12"
                            android:text="@string/location"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_margin="@dimen/margin_8"
                        android:layout_below="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_location"
                        android:textSize="@dimen/option_text_detail"
                        android:textStyle="bold"
                        android:textColor="@color/icon_tint_normal"
                        android:text="Phan Thiet, Viet Nam"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/work_detail"
                    android:layout_below="@+id/location_detail">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:id="@+id/job_detail">

                        <ImageView
                            android:layout_width="@dimen/cardview_smallicon_size"
                            android:layout_height="@dimen/cardview_smallicon_size"
                            android:id="@+id/job_ic"
                            android:layout_centerVertical="true"
                            android:src="@drawable/detail_book_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/option_text_size"
                            android:layout_toEndOf="@+id/job_ic"
                            android:layout_marginStart="@dimen/margin_12"
                            android:text="@string/work"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_margin="@dimen/margin_8"
                        android:layout_below="@+id/job_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/option_text_detail"
                        android:textStyle="bold"
                        android:textColor="@color/icon_tint_normal"
                        android:text="Software Engineer"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/work_detail">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:id="@+id/hobby_details">

                        <ImageView
                            android:layout_width="@dimen/cardview_smallicon_size"
                            android:layout_height="@dimen/cardview_smallicon_size"
                            android:id="@+id/hobby_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/detail_star_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/option_text_size"
                            android:layout_toEndOf="@+id/hobby_icon"
                            android:layout_marginStart="@dimen/margin_12"
                            android:text="@string/hobbies"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>