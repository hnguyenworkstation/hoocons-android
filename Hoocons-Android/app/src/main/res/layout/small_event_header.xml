<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/margin_4"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginStart="@dimen/margin_8"
        android:layout_width="@dimen/small_logo_size"
        android:layout_height="@dimen/small_logo_size"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn"
        android:id="@+id/event_user_profile"
        android:src="@drawable/logo_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_toEndOf="@id/event_user_profile">

        <TextView
            android:id="@+id/event_user_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="start"
            android:text="hung nguyen"
            android:textColor="@color/black"/>
    </LinearLayout>
</RelativeLayout>