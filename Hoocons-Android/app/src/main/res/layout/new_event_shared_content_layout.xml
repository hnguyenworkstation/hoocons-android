<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_time_logo"
        android:layout_margin="@dimen/margin_12">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="@dimen/margin_4"
                android:layout_width="@dimen/message_image_size"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/message_image_size"
                android:id="@+id/shared_event_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/shared_event_profile"
                android:layout_marginStart="@dimen/margin_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shared_event_user_name"
                    android:textSize="@dimen/text_16"
                    android:text="Hung Nguyen"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shared_event_type"
                    android:textSize="@dimen/text_14"
                    android:text="Images Status"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <com.hoocons.hoocons_android.CustomUI.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shared_event_text_content"
                    android:textSize="@dimen/text_14"
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/margin_4"
                    android:text="hihihihhihihihihihhihihihihihhihihihihihhihihihihihhihihihihihhihihihihihhihihihihihhihihihihihhihihihihihhihihihihihhihi"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/shared_event_options"
                android:background="@drawable/icon_button"
                android:layout_width="@dimen/cardview_medicon_size"
                android:layout_height="@dimen/cardview_medicon_size"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/margin_4"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>