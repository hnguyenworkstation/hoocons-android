<?xml version="1.0" encoding="utf-8"?>
<com.github.ppamorim.dragger.DraggerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:dragger_layout="http://schemas.android.com/apk/res-auto"
    dragger_layout:drag_view_id="@+id/drag_view"
    dragger_layout:shadow_view_id="@+id/shadow_view"
    dragger_layout:drag_position="top"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/transparent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.hoocons.hoocons_android.Activities.UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drag_view"
        android:background="@color/transparent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="@dimen/activity_card_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_toolbar"
                    android:background="@color/transparent"
                    android:layout_alignParentTop="true">
                    <include layout="@layout/custom_profile_actionbar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/flexible_space_image_height"
                        android:layout_gravity="top"
                        android:background="@color/black_alpha_12">

                        <ImageView
                            android:id="@+id/wallpaper_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/flexible_space_image_height"
                            android:scaleType="fitXY"/>

                        <ProgressBar
                            android:layout_width="@dimen/margin_24"
                            android:layout_height="@dimen/margin_24"
                            android:layout_centerInParent="true"
                            android:id="@+id/wallpaper_progress_bar"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/overlay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/flexible_space_image_height"
                        android:background="@color/transparent"/>

                    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
                        android:id="@+id/obs_scrollview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/flexible_space_image_height"
                        android:background="@android:color/transparent" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>
</com.github.ppamorim.dragger.DraggerView>
