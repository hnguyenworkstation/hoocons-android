<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_8"
    style="@style/PanelCardViewStyle"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="@dimen/hot_panel_height">

        <com.hoocons.hoocons_android.CustomUI.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add_image_button"
            android:scaleType="fitXY"
            android:id="@+id/panel_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/scrim_view_bottomup"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_banned_warn"
                android:id="@+id/ad_title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/ad_title_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a simple ad text"
                android:id="@+id/ad_message"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/ad_message_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/dark_transparent_button"
            android:layout_margin="@dimen/margin_12">
            <TextView
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6/10"
                android:id="@+id/count"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/ad_message_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>