<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hoocons.hoocons_android.ViewFragments.PhoneLoginFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/custom_toolbar"
                android:layout_alignParentTop="true">
                <include layout="@layout/custom_login_actionbar"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_12"
                android:layout_below="@+id/custom_toolbar"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:layout_marginTop="2dp"
                        android:id="@+id/country_code_picker"
                        android:layout_width="wrap_content"
                        app:countryPreference="US,VN"
                        app:defaultNameCode="VN"
                        app:textSize="20sp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_number"
                        android:id="@+id/phone_input"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:ellipsize="start"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_input"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:ellipsize="start"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/login_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="164dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/verify"
                    android:textStyle="normal"
                    android:background="@drawable/active_button"
                    android:textColor="@color/white"/>

                <Button
                    android:background="@null"
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_reset_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
