<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="?attr/actionBarSize">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/channel_seach_layout"
        android:layout_toStartOf="@+id/action_more"
        app:cardElevation="0.7dp"
        app:cardCornerRadius="@dimen/margin_4"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/margin_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/margin_4"
                android:src="@drawable/ic_map_pin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_gravity="center_vertical"
                android:id="@+id/current_address"
                android:text="@string/current_location"
                android:textSize="16sp"
                android:textColor="@color/dark_text_color"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_button"
        android:id="@+id/action_more"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:src="@drawable/ic_more_vert_colored"
        android:layout_marginEnd="@dimen/actionbar_margin"/>
</RelativeLayout>