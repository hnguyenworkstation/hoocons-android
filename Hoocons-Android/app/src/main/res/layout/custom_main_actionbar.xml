<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/icon_button"
        android:id="@+id/left_action"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:src="@drawable/ic_line_plane"
        android:layout_marginStart="@dimen/actionbar_margin"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_16"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:layout_toEndOf="@+id/left_action"
        android:layout_toStartOf="@+id/right_action"
        android:src="@drawable/hoocons_actionbar_logo"/>

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_button"
        android:id="@+id/right_action"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:src="@drawable/ic_line_plus"
        android:layout_marginEnd="@dimen/actionbar_margin"/>

</RelativeLayout>