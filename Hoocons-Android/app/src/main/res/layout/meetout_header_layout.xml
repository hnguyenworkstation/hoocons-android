<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.hoocons.hoocons_android.CustomUI.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/meetout_image_height"
            android:background="@color/colorBackground"
            android:id="@+id/meetout_image"/>

        <ProgressBar
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/image_progress"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/scrim_view_topdown"/>

        <TextView
            android:layout_margin="@dimen/margin_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello My name is Hung"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_16"
            android:maxLines="2"
            android:ellipsize="middle"
            android:id="@+id/meetout_name"/>

    </RelativeLayout>
</RelativeLayout>