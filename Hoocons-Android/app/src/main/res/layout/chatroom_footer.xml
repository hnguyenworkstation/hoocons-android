<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/margin_16"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/snow_primary"
                android:orientation="horizontal"
                android:id="@+id/action_buttons"
                android:layout_alignParentTop="true">

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="@dimen/chat_input"
                    android:src="@drawable/ic_camera_gray"
                    android:background="@drawable/icon_button"
                    android:layout_weight="1"
                    android:id="@+id/chatroom.opencamera"/>

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="@dimen/chat_input"
                    android:src="@drawable/ic_media_gray"
                    android:background="@drawable/icon_button"
                    android:layout_weight="1"
                    android:id="@+id/chatroom.opengallery"/>

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="@dimen/chat_input"
                    android:src="@drawable/ic_attach_file_gray"
                    android:background="@drawable/icon_button"
                    android:layout_weight="1"
                    android:id="@+id/chatroom.attachfile"/>

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="@dimen/chat_input"
                    android:src="@drawable/ic_gif_gray"
                    android:background="@drawable/icon_button"
                    android:layout_weight="1"
                    android:id="@+id/search_gif_action"/>

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="@dimen/chat_input"
                    android:src="@drawable/ic_location_gray"
                    android:background="@drawable/icon_button"
                    android:layout_weight="1"
                    android:id="@+id/chatroom.sendlocation"/>

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="@dimen/chat_input"
                    android:src="@drawable/ic_voice_gray"
                    android:background="@drawable/icon_button"
                    android:layout_weight="1"
                    android:id="@+id/chatroom.sendvoicerecord"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/controllers">

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_4"
                    android:layout_marginStart="@dimen/margin_8"
                    android:background="@drawable/icon_button"
                    android:id="@+id/chatroom_emoji"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_4"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emotion_button"/>

                <EditText
                    android:layout_toEndOf="@+id/chatroom_emoji"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/chat_input"
                    android:padding="@dimen/margin_8"
                    android:background="@null"
                    android:id="@+id/chat_input_content"
                    android:hint="@string/write_a_message"
                    android:textSize="@dimen/text_16"
                    android:maxLines="4"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/chatroom_send"/>

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_4"
                    android:layout_marginStart="@dimen/margin_8"
                    android:background="@drawable/icon_button"
                    android:id="@+id/chatroom_send"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_4"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:src="@drawable/chat_send_button"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>