<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:clickable="true"
    android:id="@+id/chatroom_rootlayout"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/chatroom_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_button" />

    <TextView
        android:id="@+id/chatroom_name"
        android:text="Hung Nguyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_toEndOf="@+id/chatroom_profile"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/chatroom_lastmsg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:11 PM"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="#888888"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/chatroom_msg_state"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/chatroom_lastmsg_time"
        android:background="@drawable/unread_bubble"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        />

    <TextView
        android:layout_marginStart="@dimen/margin_12"
        android:id="@+id/chatroom_last_message"
        android:layout_toStartOf="@id/chatroom_lastmsg_time"
        android:layout_below="@+id/chatroom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chatroom_profile"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="normal"
        android:padding="@dimen/margin_4"
        android:text="asdknasdkaskdasnkdnakdnksn dkansdkasndkasndkandk aksndkasndka naksdnak naksdnaksdnaksnd knsdaknd kansd"
        android:textColor="#888888"
        android:textSize="@dimen/text_14" />
</RelativeLayout>