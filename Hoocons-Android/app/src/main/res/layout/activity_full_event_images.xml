<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.hoocons.hoocons_android.Activities.FullEventImagesActivity">

    <com.hoocons.hoocons_android.CustomUI.HackyViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hacky_viewpager"/>

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#b2000000"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="#fff"
            tools:text="1 / 5">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b2000000"
        android:layout_alignParentBottom="true">

        <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/event_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="14dp"
                android:textColor="#fff"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="东西美美的，性价比很高。包装很精致，还有赠品，不错，好评！东西美美的，性价比很高。包装很精致，还有赠品，不错，好评！"/>
        </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    </RelativeLayout>
</RelativeLayout>
