<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/intro1_logo"
            android:layout_marginTop="@dimen/intro_logo_padding"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/intro_logo_size"
            android:layout_height="@dimen/intro_logo_size"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/plain_hoocons_image"/>

        <TextView
            android:id="@+id/intro1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoocon App"
            android:layout_below="@id/intro1_logo"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/slide_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro1_title"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="A newer, stronger way to connect \n everyone over the world"
            android:textSize="@dimen/slide_desc"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/intro1_waves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_20"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/waves_image" />

    </RelativeLayout>

</RelativeLayout>