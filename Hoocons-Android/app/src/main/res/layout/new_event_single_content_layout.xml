<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_content"
        android:background="@color/gray_alpha"
        android:layout_margin="@dimen/margin_8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.hoocons.hoocons_android.CustomUI.AdjustableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_alpha"
                android:adjustViewBounds="true"
                android:minHeight="248dp"
                android:minWidth="248dp"
                android:scaleType="fitCenter"
                android:id="@+id/event_single_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/delete_single_content"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="@dimen/margin_12"
        android:background="@drawable/icon_button"
        android:scaleType="fitXY"
        android:src="@drawable/ic_remove_circle" />
</RelativeLayout>