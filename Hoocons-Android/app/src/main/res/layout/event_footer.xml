<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="@dimen/margin_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/love_event_action"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:id="@+id/love_icon"
                android:src="@drawable/ic_favorite_inactive"/>

            <TextView
                android:layout_marginStart="@dimen/margin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:id="@+id/like_count"
                android:textSize="@dimen/text_16"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dark_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/comment_event_action"
            android:layout_marginStart="@dimen/margin_16"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:src="@drawable/ic_comment_inactive"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:text="125"
                android:id="@+id/comment_count"
                android:textSize="@dimen/text_16"
                android:textColor="@color/dark_text_color"
                android:layout_marginEnd="@dimen/margin_10"/>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/action_icon_size"
            android:layout_height="@dimen/action_icon_size"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_12"
            android:src="@drawable/jc_share_pressed"/>
    </LinearLayout>
</RelativeLayout>