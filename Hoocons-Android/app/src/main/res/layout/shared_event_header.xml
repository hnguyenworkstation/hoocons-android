<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/margin_4"
    android:textStyle="bold"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginStart="@dimen/margin_8"
        android:layout_width="@dimen/topic_logo_size"
        android:layout_height="@dimen/topic_logo_size"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn"
        android:id="@+id/shared_event_user_profile"
        android:src="@drawable/logo_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/shared_event_user_profile">

        <TextView
            android:id="@+id/shared_event_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="start"
            android:text="hung nguyen"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/card_time_logo"
                android:layout_height="@dimen/card_time_logo"
                android:layout_weight=".5"
                android:src="@drawable/ic_update_color" />

            <TextView
                android:id="@+id/shared_event_timeframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="2"
                android:textSize="@dimen/text_12"
                android:text="3h ago"
                android:textColor="@color/black_alpha_30" />

            <ImageView
                android:layout_width="@dimen/card_time_logo"
                android:layout_height="@dimen/card_time_logo"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_weight=".5"
                android:id="@+id/shared_event_location_icon"
                android:src="@drawable/ic_location_color" />

            <TextView
                android:id="@+id/shared_event_posted_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="2"
                android:textSize="@dimen/text_12"
                android:text="California, CA"
                android:textColor="@color/black_alpha_30" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>